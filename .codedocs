# .codedocs

#---------------------------------------------------------------------------
# CodeDocs Configuration
#---------------------------------------------------------------------------

# Include the Doxygen configuration from another file.

# Specify directories and files to include in the documentation.
INPUT = README.md Codebase/ 

# Directories where Doxygen should generate the documentation.
OUTPUT_DIRECTORY = generated-docs/html

# Repositories to link documentation with (if applicable).

RECURSIVE = YES
PROJECT_NAME = "Cavern"
PROJECT_NUMBER = "1.0"

#---------------------------------------------------------------------------
# Doxygen Configuration
#---------------------------------------------------------------------------

# Use the Markdown file as the main page of the documentation.
USE_MDFILE_AS_MAINPAGE = README.md

# Additional settings to ensure badges and README content are correctly rendered.
HTML_EXTRA_FILES = README.md

# Ensure Doxygen generates HTML output.
GENERATE_HTML = YES

# Add more directories or files to include in the documentation if needed.

EXTRACT_ALL = YES

INPUT += README.md
EXTRACT_ALL = YES
GENERATE_LATEX = NO
GENERATE_HTML = YES
MARKDOWN_SUPPORT = YES
EXTERNAL_GROUPS = YES
EXTERNAL_PAGES = YES
#---------------------------------------------------------------------------
# Additional Settings for Codecov
#---------------------------------------------------------------------------

# If using badges or special layout, ensure these are correctly set.
# This setting is specific to how you want the layout to appear on CodeDocs.

# Optional: Additional settings to customize the output, such as styles or themes.
# Ensure badges and other README content are correctly rendered.
